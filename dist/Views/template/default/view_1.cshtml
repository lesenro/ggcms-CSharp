@{
    Layout = "_Layout.cshtml";
    var parentCategory=ViewBag.dataHelper.Categories(ViewBag.category.ParentId);
}     <section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <a href="@ViewBag.article.RedirectUrl"><h1 class="title">@ViewBag.Title</h1></a>
                        <p>@ViewBag.article.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#page-breadcrumb-->
<section id="blog-details" class="padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-5">
                <div class="sidebar blog-sidebar">
                    <div class="sidebar-item categories">
                        <h3>类目</h3>
                        @if(ViewBag.category.subCategory.Count>0){
                        <ul class="nav navbar-stacked">
                            @foreach (var item in ViewBag.category.subCategory){
                            <li><a href="@item.RedirectUrl">@item.CategoryName<span class="pull-right">(@item.ArticleTotal)</span></a></li>
                            }
                        </ul>
                        }else if(parentCategory!=null){
                        <ul class="nav navbar-stacked">
                            @foreach (var item in parentCategory.subCategory){
                                if(item.Id==ViewBag.category.Id){
                                <li class="active"><a href="@item.RedirectUrl">@item.CategoryName<span class="pull-right">(@item.ArticleTotal)</span></a></li>
                                }else{
                                <li><a href="@item.RedirectUrl">@item.CategoryName<span class="pull-right">(@item.ArticleTotal)</span></a></li>
                                }
                            }
                        </ul>
                        }
                    </div>
                    <div class="sidebar-item tag-cloud">
                        <h3>标签</h3>
                        <ul class="nav nav-pills">
                            <li><a href="#">Corporate</a></li>
                            <li><a href="#">Joomla</a></li>
                            <li><a href="#">Abstract</a></li>
                            <li><a href="#">Creative</a></li>
                            <li><a href="#">Business</a></li>
                            <li><a href="#">Product</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-sm-7">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="single-blog blog-details two-column">
                            @if(!string.IsNullOrEmpty(ViewBag.article.TitleImg.Trim())){
                            <div class="post-thumb">
                                <a href="@ViewBag.article.RedirectUrl"><img src="@ViewBag.article.TitleImg" class="img-responsive" alt=""></a>
                                <div class="post-overlay">
                                    <span class="uppercase"><a href="#">14 <br><small>Feb</small></a></span>
                                </div>
                            </div>
                            }
                            <div class="post-content overflow">
